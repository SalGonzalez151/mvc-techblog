<div>
    <h3>Current Post:</h3>

    <h2>{{title}}</h2>
    <p>{{description}}</p>
    <div>
        <div>
            <button class="edit-comment" id="edit-comment">Edit</button>
        </div>
        <div class="col-md-6 project-list">
            
            <h3>comments:</h3>
            {{#each comments}}
            <div class="row mb-2">
                <div class="col-md-8">
                    <div>@{{user.user}}</div>
                    <p>{{description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<button class="add-comment" id="add-comment">Comment</button>
<div class="comment">
    <label for="name">Comment:</label>
    <input class="form-input" type="text" id="name" />
</div>



<script src="/js/comments.js"></script>