<div>
    <h2>{{title}}</h2>
    <p>{{description}}</p>
    <div>

        {{#if comments.length}}
        <div class="col-md-6 project-list">
            <h3>Current Projects:</h3>

            {{#each comments as | comments |}}
            <div class="row mb-2">
                <div class="col-md-8">
                    <p>{{comments.description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </div>
</div>
<button class="comment-btn" data-id="{{id}}">Comment</button>
<button class="del-btn" data-id="{{id}}">Delete</button>
</div>

<script src="/js/dashboard.js"></script>